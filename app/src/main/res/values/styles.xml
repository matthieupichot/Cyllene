<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Button.Login" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>